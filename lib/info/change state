import 'package:flutter/material.dart';
import 'package:flutter_riverpod/flutter_riverpod.dart';
import 'package:riverpod_tutorial/providers/name_provider.dart';
import 'package:riverpod_tutorial/splash_screen.dart';

import 'package:flutter_riverpod/flutter_riverpod.dart';

final nameProvider = StateProvider<String>((ref) {
  return "Asc Mohamed";
});

"Means reset it"

"How to listen if value changed "
 ref.listen(nameProvider, (prev,next){
      print("Value changed alxm... $next");
    });

 TextButton(
                onPressed: () {
                  ref.invalidate(nameProvider);
                },
                child: Text("Change the name"))


class LoginScreen extends ConsumerWidget {
  const LoginScreen({super.key});

  @override
  Widget build(BuildContext context, WidgetRef ref) {
    return Scaffold(
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(ref.watch(nameProvider)),
            TextButton(
              onPressed: () {
                ref.read(nameProvider.notifier).state = "Jamac";
                or
                ref.read(nameProvider.notifier).update((state)=>"Mustafe");

              },
              child: const Text("Change text"),
            ),
            TextButton(
              onPressed: () {
                Navigator.push(
                    context,
                    MaterialPageRoute(
                        builder: (context) => const SplashScreen()));
              },
              child: const Text("Go to splash"),
            )
          ],
        ),
      ),
    );
  }
}
